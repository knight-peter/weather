/* pages/list/list.wxss */

.date-item {
  display: flex;
  align-items: center;
  height: 150rpx;
  margin: 0 40rpx;
  border-bottom: 1px solid rgba(0, 0, 0, .1);
}

.day,
.date {
  opacity: .8;
  font-size: 30rpx;
  line-height: 1.4;
}

.date {
  opacity: .5;
}

.temp {
  flex: 1;
  padding-right: 60rpx;
  text-align: center;
  opacity: .8;
  font-size: 40rpx;
  line-height: 56rpx;
}

.weather-icon {
  width: 90rpx;
  height: 90rpx;
}

.date-item:last-child {
  border-bottom: none;
}